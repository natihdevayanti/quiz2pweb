@model IEnumerable<Books.Entities.Book>

@{
    ViewBag.Title = "Books";
}

<div class="container-fluid" style="margin-top:30px">
    <div class="row">
        <div class="col-lg-10">
            <h2 >Book List</h2>
        </div>
        <div class="col-lg-2">
                @Html.ActionLink("Add New Book", "Create", new { area = "" }, new { @class = "btn btn-outline-primary" })
        </div>
    </div>
    <br />
    
       
    
    <table class="table table-bordered table-hover book-table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th> Action </th>
        </tr>

        @foreach (var item in Model)
        {
   <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
    
        <td>

            @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-success" })
            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-outline-warning" })
            @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
        }
    </table>
</div>




